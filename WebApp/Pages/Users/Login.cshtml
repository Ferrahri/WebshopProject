@page
@using WebApp.Pages.Users
@model LoginModel

<div class="container" style="padding:25px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.UserName"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="User.UserName" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="User.UserName"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="User.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="User.Password"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <input type="submit" class="btn btn-primary" value="Login"/>
            </div>
        </div>
    </form>
</div>