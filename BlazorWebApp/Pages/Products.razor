@page "/products"
@using BlazorWebApp.Models
@using BlazorWebApp.Components
@inject HttpClient client
@inject NavigationManager nav

@*<button @onclick='() => Nav.NavigateTo($"/product/create")' class="btn btn-primary"><i class="fas fa-plus"></i> Create</button>*@

<div class="row">
    @if (ProductItems != null)
    {
        @foreach (var item in ProductItems)
        {
            
        <div class="row">
            <div class="col-6">
                <ProductItem ProductModel="item"></ProductItem>
            </div>
        </div>

        }
    }
    else
    {
        // loading component
        <Loading Text="Loading..." />
    }
</div>

@code {
    private List<ProductModel> ProductItems { get; set; }

    protected async override Task OnInitializedAsync()
    {
        ProductItems = await client.GetFromJsonAsync<List<ProductModel>>("/all");

        await base.OnInitializedAsync();
    }

}