@using BlazorWebApp.Models
@inject NavigationManager Nav

<div class="card">
    <div class="card-header">
        <p class="card-text">@ProductModel.BrandName @ProductModel.ProductName</p>
    </div>
    <div class="card-body">
        <p class="card-text">@ProductModel.Price Kr.</p>
        <button @onclick='() => Nav.NavigateTo($"/products/details/{ProductModel.ProductId}")' class="btn btn-primary">Info</button>
        <button @onclick='() => Nav.NavigateTo($"/product/edit/{ProductModel.ProductId}")' class="btn btn-primary">Edit</button>
    </div>
</div>

@code {
    [Parameter]
    public ProductModel ProductModel { get; set; }
}